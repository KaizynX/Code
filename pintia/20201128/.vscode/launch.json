{
    "version": "0.2.0",
     "configurations": [
         {
             "name": "(Windows) Launch",
             "type": "cppvsdbg",
             "request": "launch",
             "program": "cmd",
             "args": [
                 "/C",
                 "${fileDirname}\\${fileBasenameNoExtension}.exe",
                 "&",
                 "pause"

             ],
             // Ctrl+Shift+B
             //"preLaunchTask": "g++",
             "stopAtEntry": false,
             "cwd": "${workspaceFolder}",
             "environment": [],
             "externalConsole":true
         },
         {
             "name": "(gdb) Launch",
             "type": "cppdbg",
             "request": "launch",
             "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
             "args": [],
             "stopAtEntry": false,
             "cwd": "${workspaceFolder}",
             "environment": [],
             "externalConsole": true,
             "MIMode": "gdb",
             // "miDebuggerPath": "C:/Program Files/mingw-w64/x86_64-8.1.0-posix-seh-rt_v6-rev0/mingw64/bin/gdb.exe",
             "miDebuggerPath":"C:\\MinGW\\bin\\gdb.exe", // miDebugger��·����ע������Ҫ��MinGw��·����Ӧ
             // "preLaunchTask": "g++",
             "setupCommands": [
